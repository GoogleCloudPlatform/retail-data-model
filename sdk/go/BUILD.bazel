# Payments Module

# Promotions Module
go_proto_library(
    name = "promotions_go_proto",
    importpath = "github.com/rrmcguinness/retail-data-model/promotions/pb",
    proto = "//api/promotions:model_proto",
    deps = [
        ":enums_go_proto",
    ] + WELL_KNOWN_TYPES,
