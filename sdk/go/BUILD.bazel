# Merchandise Module
go_proto_library(
    name = "merchandise_go_proto",
    importpath = "github.com/rrmcguinness/retail-data-model/merchandise/pb",
    proto = "//api/merchandise:model_proto",
    deps = [
        ":enums_go_proto",
