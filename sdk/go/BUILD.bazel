        "//api/events:service_proto",
    ],
    deps = [
        ":common_go_proto",
        ":events_go_proto",
        "@go_googleapis//google/api:annotations_go_proto",
    ],
)

# Location Module
go_proto_library(
    name = "location_go_proto",
    importpath = "github.com/rrmcguinness/retail-data-model/location/pb",
    proto = "//api/location:model_proto",
    deps = [
        ":enums_go_proto",
        ":common_go_proto",
    ] + WELL_KNOWN_TYPES,
)

go_grpc_library(
    name = "location_go_grpc",
    importpath = "github.com/rrmcguinness/retail-data-model/location/grpc",
    protos = [
        "//api/location:service_proto",
    ],
    deps = [
        ":common_go_proto",
        ":enums_go_proto",
        ":location_go_proto",
        "@go_googleapis//google/api:annotations_go_proto",
