load("@io_bazel_rules_go//go:def.bzl", "go_path", "go_source")
load("@rules_pkg//pkg:tar.bzl", "pkg_tar")
load("//:build/go_deps.bzl", "COMMON_API_PROTOS", "WELL_KNOWN_TYPES")
load("@io_bazel_rules_go//proto:def.bzl", "go_grpc_library", "go_proto_library")

package(default_visibility = [
    "//visibility:public",
])

# Enums Module
go_proto_library(
    name = "enums_go_proto",
    importpath = "github.com/rrmcguinness/retail-data-model/enums",
    proto = "//api/enums",
)

# Common Module
go_proto_library(
    name = "common_go_proto",
    importpath = "github.com/rrmcguinness/retail-data-model/common/pb",
    proto = "//api/common:model_proto",
    deps = [
        ":enums_go_proto",
    ] + WELL_KNOWN_TYPES,
)

go_grpc_library(
    name = "common_go_grpc",
    importpath = "github.com/rrmcguinness/retail-data-model/common/grpc",
    protos = [
        "//api/common:service_proto",
    ],
    deps = [
        ":common_go_proto",
        ":enums_go_proto",
        "@go_googleapis//google/api:annotations_go_proto",
    ],
)

# Customer Module
go_proto_library(
    name = "customer_go_proto",
    importpath = "github.com/rrmcguinness/retail-data-model/customer/pb",
    proto = "//api/customer:model_proto",
    deps = WELL_KNOWN_TYPES,
)

# Enterprise Module
go_proto_library(
    name = "enterprise_go_proto",
    importpath = "github.com/rrmcguinness/retail-data-model/enterprise/pb",
