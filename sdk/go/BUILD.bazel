    deps = [
        ":enums_go_proto",
        ":party_go_proto",
        ":common_go_proto",
    ] + WELL_KNOWN_TYPES,
)

go_grpc_library(
    name = "enterprise_go_grpc",
    importpath = "github.com/rrmcguinness/retail-data-model/enterprise/grpc",
    protos = [
        "//api/enterprise:service_proto",
    ],
    deps = [
        ":common_go_proto",
        ":enterprise_go_proto",
        "@go_googleapis//google/api:annotations_go_proto",
    ],
)

#Events Module
go_proto_library(
    name = "events_go_proto",
