# A consolidated source code group
go_source(
    name = "api_go_source",
    embed = [
        ":enums_go_proto",
        ":common_go_proto",
        ":customer_go_proto",
        ":enterprise_go_proto",
        ":events_go_proto",
        ":location_go_proto",
        ":merchandise_go_proto",
        ":party_go_proto",
        ":promotions_go_proto",
        ":common_go_grpc",
        ":location_go_grpc",
        ":events_go_grpc",
    ],
)

# A tar package used to archive the revision on build.
# The 'remap' section is used to strip the Bazel prefix of the file group
# to ensure the archive is a valid Go Module
pkg_tar(
    name = "go_api_archive",
    srcs = [
        "README.md",
        "go.mod",
        "go.sum",
        ":api_go_source",
    ],
    extension = "tar.gz",
    remap_paths = {
        "sdk/go/README.md": "README.md",
        "sdk/go/go.mod": "go.mod",
        "sdk/go/go.sum": "go.sum",
        "sdk/go/common_go_grpc_/github.com/rrmcguinness/retail-data-model/": "",
        "sdk/go/common_go_proto_/github.com/rrmcguinness/retail-data-model/": "",
        "sdk/go/customer_go_proto_/github.com/rrmcguinness/retail-data-model/": "",
        "sdk/go/enterprise_go_proto_/github.com/rrmcguinness/retail-data-model": "",
        "sdk/go/enums_go_proto_/github.com/rrmcguinness/retail-data-model": "",
        "sdk/go/events_go_proto_/github.com/rrmcguinness/retail-data-model": "",
        "sdk/go/events_go_grpc_/github.com/rrmcguinness/retail-data-model": "",
        "sdk/go/location_go_proto_/github.com/rrmcguinness/retail-data-model": "",
        "sdk/go/location_go_grpc_/github.com/rrmcguinness/retail-data-model": "",
        "sdk/go/merchandise_go_proto_/github.com/rrmcguinness/retail-data-model": "",
        "sdk/go/party_go_proto_/github.com/rrmcguinness/retail-data-model": "",
        "sdk/go/promotions_go_proto_/github.com/rrmcguinness/retail-data-model": "",
    },
    strip_prefix = "/",
)
